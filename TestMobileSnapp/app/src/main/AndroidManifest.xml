<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snapp.dev">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestMobileSnapp">
        <activity
            android:name=".views.SplashActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MenuActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".views.StudentInfoActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".views.CategoriesActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".views.ProductsActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".views.ProductDetailsActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>